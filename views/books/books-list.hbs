<h1>List of books in our database</h1>

{{#each booksArr}}
    <section class="book-summary">
        <h2>{{this.title}}</h2>
        <p>
            Author: {{this.author}} <br />
            Rating: {{this.rating}} <br />
            <a href="/books/{{id}}">More details</a>
        </p>
    </section>
{{/each}}
<button><a href="/books/{{rating}}">More details</a></button>